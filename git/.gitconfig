[user]
name = Jérémie Roquet
email = jroquet@arkanosis.net
signingkey = jroquet@arkanosis.net
useconfigonly = true

[alias]
st = status
df = diff
b = branch
ci = commit -a
co = checkout
lg = log --graph --pretty=format:'%C(auto)%h — %s %d\nAuthored: %ad (%ar) — %an <%ae>\nCommited: %cd (%cr) — %cn <%ce> (%G?)\n\n%b%Creset'
unadd = reset HEAD
uncommit = reset --soft HEAD^

[color]
branch = auto
diff = auto
grep = auto
interactive = auto
status = auto

[color "status"]
added = green
changed = blue
untracked = magenta

[commit]
gpgsign = true

[diff]
tool = vimdiff

[gitreview]
remote = origin

[log]
decorate = full

[push]
default = current

[tig]
diff-options = --show-signature
