# "-*- sh -*-"

source epita
source ooo

DIST_HOSTS=(lisp caml ruby ada php asp sh java apl)

function clone_atelier_cpp()
{
    disable_proxy
    for day in `seq 5`; do
	hg clone https://forge.acu.epita.fr/projects/atelier-cpp-j0$day-2011 $day
	gmake -C ./$day/subject/ all all all
	gmake -C ./$day/tutorials/ all all all
	mv ./$day/subject/subject.pdf ./exercise-j0$day.pdf
	mv ./$day/tutorials/subject.pdf ./tutorials-j0$day.pdf
    done
}

function clone()
{
    disable_proxy
    for clone; do
	hg clone https://forge.acu.epita.fr/projects/$clone $clone
	gmake -C ./$clone/subject/ all all all
	gmake -C ./$clone/tutorials/ all all all
	gmake -C ./$clone/slides/ all all all
    done
}

alias sp="ssh intradmin@pascal"
alias sx="ssh xenadev"

function d()
{
    dmd2 -I~/pub/dmd2/src/phobos/ $@
}

