# "-*- sh -*-"

if which gsed >& /dev/null; then
    function sed()
    {
	gsed $@
    }
fi

if which gawk >& /dev/null; then
    function awk()
    {
	gawk $@
    }
fi

if which gmake >& /dev/null; then
    function make()
    {
	gmake $@
    }
fi

if ! which md5 >& /dev/null; then
    function md5()
    {
	md5sum $@
    }
fi

if which colordiff >& /dev/null; then
    function diff()
    {
	colordiff $@
    }
fi

# Emacs :p
autoload -U tetris
