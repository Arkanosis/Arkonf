# "-*- sh -*-"

if readlink -f . >& /dev/null; then
    function canonicalize()
    {
	readlink -f $@
    }
elif ! which canonicalize >&-; then
    echo 'Unable to find canonicalize, consider installing it with "arkinstall canonicalize"' >&2
fi

if which gsed >&-; then
    function sed()
    {
	gsed $@
    }
fi

if which gawk >&-; then
    function awk()
    {
	gawk $@
    }
fi

if which gmake >&-; then
    function make()
    {
	gmake $@
    }
fi
