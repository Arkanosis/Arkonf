# "-*- sh -*-"

configuration_files=(
    awesome/rc.lua
    bash/.bash_profile
    bash/.bashrc
    emacs/.emacs
    firefox/chrome/userChrome.css
    firefox/chrome/userContent.css
    gdb/.gdbinit
    git/.gitconfig
    htop/.htoprc
    mercurial/.hgrc
    pyjab/.pyjabrc
    python/.pythonrc.py
    screen/.screenrc
    tmux/.tmux.conf
    uncrustify/.uncrustifyrc
    vim/.vimrc
    xmonad/xmonad.hs
    xorg/.Xmodmap
    xorg/.Xresources
    xorg/.xsession
    zsh/.zshrc
)

typeset -A configuration_files_pathes

configuration=()

for configuration_file in $configuration_files; do
    file=`echo $configuration_file | sed 's_\(.*/\)\?\([^/]\+\)$_\2_'`
    configuration+=($file)
    configuration_files_pathes[$file]=$ARKONF_DIR/$configuration_file
done

function ze()
{
    local files configuration_file_path

    files=()

    for module; do
	configuration_file_path=$configuration_files_pathes[$module]
	if [[ -n $configuration_file_path ]]; then
	    files+=($configuration_file_path)
	else
	    if [[ $module[1] = _ ]]; then
		files+=($ZARKONF_DIR/.zsh/completions/$module)
	    else
		files+=($ZARKONF_DIR/.zsh/$module)
	    fi
	fi
    done

    e $files
}

function zf()
{
    local match params oldifs
    match=`grep -nRI " $1()" $ZARKONF_DIR`

    oldifs=$IFS
    IFS=':'
    params=($=match)
    IFS=$oldifs

    e +$params[2] $params[1]
}

function cdo()
{
    pushd $ARKONF_DIR >&-
    $@
    popd > /dev/null
}

function cst()
{
    cdo st $@
}

function cdf()
{
    cdo df $@
}

function cdfl()
{
    cdo dfl $@
}

function cci()
{
    cdo ci $@
}

function cpush()
{
    cdo push $@
}

function cup()
{
    cdo up $@
}

function cadd()
{
    cdo add $@
}

function ctd()
{
    e $ZARKONF_DIR/.zsh/TODO $@
}

function ca()
{
    cd $ARKONF_DIR $@
}

function cz()
{
    cd $ZARKONF_DIR $@
}

function cv()
{
    cd $ARKONF_DIR/vim $@
}

function czz()
{
    cd $ZARKONF_DIR/.zsh $@
}

function czc()
{
    cd $ZARKONF_DIR/.zsh/completions $@
}
