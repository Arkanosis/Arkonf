# "-*- sh -*-"

function dotf()
{
    local format

    format=$1
    shift

    if ! ((#)); then
	echo "Usage: $format <files.dot>" >&2
	return 1
    else
	for file; do
	    dot -T$format $file -o `echo $file | sed s/dot$/$format/`
	done
    fi
}

function png()
{
    dotf png $@
}
function jpg()
{
    dotf jpg $@
}
function svg()
{
    dotf svg $@
}
