# "-*- sh -*-"

function duplicates()
{
    typeset -A files
    for dir; do
	for file in `find "$dir" -type f`; do
	    hash=`md5sum $file | cut -d ' ' -f 1`
	    if [ -z "$files[$hash]" ]; then
		files[$hash]="$file"
	    else
		echo "$file is a potential duplicate of $files[$hash] (use 'diff' to be sure)"
	    fi
	done
    done
}