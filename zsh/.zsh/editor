# "-*- sh -*-"

if which vim >& /dev/null; then
   export EDITOR='vim'
else
   export EDITOR='vi'
fi

function v()
{
    $EDITOR $@
}

if which emacs >& /dev/null; then
    function e()
    {
	emacs -nw $@
    }
    function ec()
    {
	emacsclient -nw $@
    }
else
    function e()
    {
	$EDITOR $@
    }
fi

PAGER=less
