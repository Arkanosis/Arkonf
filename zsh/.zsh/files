# "-*- sh -*-"

alias -s README=v
alias -s INSTALL=v

if which okular >&-; then
    alias -s pdf=okular
elif which acroread >&-; then
    alias -s pdf=acroread
else
    alias -s pdf=xpdf
fi

for srcext in $puresrcexts; do
    alias -s $srcext=e
done

alias -s Makefile=e

if which gwenview >&-; then
    viewer=gwenview
elif which xv >&-; then
    viewer=xv
else
    viewer=display
fi

alias -s bmp=$viewer
alias -s jpg=$viewer
alias -s jpeg=$viewer
alias -s png=$viewer
