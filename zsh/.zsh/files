# "-*- sh -*-"

function available()
{
    for program in $@[1,-2]; do
	if which $program >& /dev/null; then
	    echo $program
	    return
	fi
    done
    echo $@[-1]
}

function associate()
{
    for ext in $@[1,-2]; do
	alias -s $ext=$@[-1]
    done
}

alias -s README=v
alias -s INSTALL=v
alias -s Makefile=e

associate $puresrcexts e
associate bmp gif jpeg jpg png svg `available gwenview xv display`
associate pdf ps `available okular evince xpdf`
