# "-*- sh -*-"

function fx()
{
    if ! ((#)); then
	echo "Usage: fx page.htm" >&2
	return 1
    else
	for i; do
	    firefox `pwd`/$i
	done
    fi
}

function kf()
{
    killall firefox-bin firefox
}

function rmlock()
{
    find ~/.mozilla/firefox \( -name 'lock' -o -name '.parentlock' \) -delete
    find ~/.thunderbird \( -name 'lock' -o -name '.parentlock' \) -delete
}
