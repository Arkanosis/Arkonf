# "-*- sh -*-"

function fx()
{
    if [ "$#" -lt 1 ]; then
	echo "Usage: fx page.htm" >&2
	return 1
    else
	for i; do
	    firefox "`pwd`/$i"
	done
    fi
}

function kf()
{
    killall firefox-bin firefox
}

alias rmlock="find ~/.mozilla/firefox \( -name 'lock' -o -name '.parentlock' \) -exec rm -f {} \;"
