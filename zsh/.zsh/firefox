# "-*- sh -*-"

function fx()
{
    if ! ((#)); then
        echo "Usage: fx page.htm" >&2
	return 1
    else
	for i; do
	    firefox $i:A
	done
    fi
}

function kf()
{
    killall firefox-bin firefox
}

function rfx()
{
    kf ; firefox &!
}

function rmlock()
{
    rm -f ~/.mozilla/firefox/*/{.parentlock,lock}(N)
    rm -f ~/.thunderbird/*/{.parentlock,lock}(N)
}

function falt()
{
    firefox -no-remote -Profile ~/.mozilla/firefox/*(oc[2])
}
