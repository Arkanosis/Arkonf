# "-*- sh -*-"

function cmdg()
{
    cmd="$1"
    shift

    if ! test -d "/goinfre/$USER/"; then
	mkdir -m 700 "/goinfre/$USER/"
    fi

    if test -O "/goinfre/$USER"; then
	chmod 700 "/goinfre/$USER"
	"$cmd" $@ "/goinfre/$USER/"
    else
	print "\e[31mHacking attempt!\n\"/goinfre/$USER\" does not belong to $USER" >&2
	return 1
    fi
}

function cdg()
{
    cmdg cd $@
}

function cpg()
{
    cmdg cp -r $@
}
alias cpr="cpg"

function mvg()
{
    cmdg mv $@
}