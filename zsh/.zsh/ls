# "-*- sh -*-"

case `uname -s` in
    *BSD|SunOS)
	alias ls="gls --color -F"
    ;;
    OSF1|Darwin|HP-UX)
	alias ls="\ls -F"
    ;;
    Linux)
	alias ls="ls --color -F"
    ;;
esac

alias l="ls -lh"
alias ll="l -A"
alias lS="ll -S"
alias lll="ll | less -r"

# Liste uniquement les dossiers
alias lp='ls -ld *(-/DN)'

# Liste uniquement les fichiers
alias lf='ls -l **(.)'

source ./tree

function tls()
{
    # Si -V dans les arguments, rediriger vers tree, sinon vers ls
}
