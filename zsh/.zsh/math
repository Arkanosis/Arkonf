# "-*- sh -*-"

autoload zcalc

alias zc=zcalc

function comp()
{
    local file

    file=`tempfile`.d
    cat > $file <<EOF
		import std.stdio;
		import std.math;

		int main()
		{
		  double compute()
		  {
EOF

    echo $* \; >> $file

    cat >> $file <<EOF
		  }

		  std.stdio.writefln(compute());

		  return 0;
		}
EOF

    `which dmd2` -run $file
}

setopt c_bases
setopt octal_zeroes
