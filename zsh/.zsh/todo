# "-*- sh -*-"

TASKS=()

if [[ ! -f $ZARKONF_TODO ]]; then
    touch $ZARKONF_TODO
fi

source $ZARKONF_TODO

function td()
{
    for task in $TASKS; do
	echo $task
    done
}

function tk()
{
    TASKS+=$1
    echo "TASKS=($TASKS)" >| $ZARKONF_TODO
}

function ts()
{
    # TODO remove task (backup in $ZARKONF_TODO.bak)
    # TODO _ts to autocomplete
}
