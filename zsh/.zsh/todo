# "-*- sh -*-"

TASKS=()

if [[ ! -f $ZARKONF_TODO ]]; then
    touch $ZARKONF_TODO
fi

source $ZARKONF_TODO

function ta()
{
    TASKS+=$*
    echo "TASKS=($TASKS)" >| $ZARKONF_TODO
}

function td()
{
    TASKS=("${(@)TASKS:#$1}")
    echo "TASKS=($TASKS)" >| $ZARKONF_TODO
}

function ts()
{
    for task in $TASKS; do
	echo $task
    done
}
