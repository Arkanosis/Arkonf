# "-*- sh -*-"

function ma()
{
    if ! ((#)); then
	echo 'Usage: ma <files>' >&2
	return 1
    fi

    if ! [[ -d mnt ]]; then
	mkdir mnt
    fi

    for i; do
        if ! [[ -d mnt/$i ]]; then
	   mkdir mnt/$i
	fi
	truecrypt $i mnt/$i
    done
}

function addnode()
{
    if ((# != 1)); then
        echo 'Usage: addnode <nodeNumber>' >&2
	return 1
    fi

    sudo mknod -m660 /dev/loop$1 b 7 $1
}
