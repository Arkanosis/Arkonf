# "-*- sh -*-"

autoload -U read-from-minibuffer

sed-line ()
{
   read-from-minibuffer 'Sed: '
   if [[ -n $REPLY ]]; then
      BUFFER=`echo $BUFFER | sed $REPLY`
   fi
}

zle -N sed-line

